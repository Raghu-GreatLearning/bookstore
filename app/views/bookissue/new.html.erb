<h2 class="d-flex mb-3 justify-content-center text-muted">Issue book </h2>

<div class="d-flex align-items-center flex-column shadow p-2 bg-light text-scondary gap-3 mb-3"> 
  <div class="fs-4 text-warning">
    <%= @book[:title]%>
  </div>
  <div>
    Author: <%= @book[:author]%>
  </div>
  <div>
    Published in: <%= @book[:published_in]%>
  </div>
  <div>
    Volume: <%= @book[:volume]%>
  </div>
  <div>
    Issue Status:
    <span class="text-danger">
    <% if @book[:issued]%>
      issued
    <%else%>
      Not issued
    <%end%><span>
  </div>
</div>
<h1 class="text-muted">Student Details</h1>

<%= form_with model: @student, url: issueBook_path do |form| %>
  <% if form.object.errors.any? %>
    <div class="alert alert-danger">
      <% @student.errors.full_messages.each do |message| %>
        <div><%= message%></div>
      <%end%>
    </div>
  <%end%>
  <div class="mb-3">
    <%= form.label :name, class:"mb-2"%>
    <%= form.text_field :name, class:"form-control", placeholder: "student name"%>
  </div>
  <div class="mb-3">
    <%= form.label :email, class:"mb-2"%>
    <%= form.email_field :email, class:"form-control", placeholder: "abc@gmail.com"%>
  </div>
  <div class="mb-3">
    <%= form.label :bookIssued, class:"mb-2"%>
    <%= form.text_field :bookIssued, class:"form-control", value: @book[:title]%>
  </div>
  <div class="mb-3">
    <%= form.label :issuedDate, class:"mb-2"%>
    <%= form.date_field :issuedDate, class:"form-control"%>
  </div>
  <div class="mb-3">
    <%= form.label :returnDate, class:"mb-2"%>
    <%= form.date_field :returnDate, class:"form-control"%>
  </div>
  <div class="mb-3">
    <%= form.submit "Issue Book", class:"btn btn-primary"%>
  </div>

<% end %>